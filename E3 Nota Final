#include <stdio.h>
#include <iostream> 
using namespace std;
int main()
{
    float a, b, c, d, e, f, g, h, i; 
    cout<< "Ingrese las notas de los EXAMENES PARCIALES en respectivo orden: "<< endl;
    cin>>a;
    cin>>b; 
    cin>>c;
    e=((a+b+c)/3)*0.40;
    cout<< "La nota de examenes parciales: "<< e<<endl; 
    cout<<"Ingrese la nota del EXAMEN FINAL: "<<endl;
    cin>>f;
    g=f*0.40;
    cout<< "Ingrese la nota del pryecto final: "<< endl;
    cin>>h;
    i=h*0.20;
    cout<<"La nota final es: "<<(e+g+i)<<endl;
    return 0;
}
